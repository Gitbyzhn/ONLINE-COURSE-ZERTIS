@model IEnumerable<OnlineCourseZertis.Models.User_Premium>
@using OnlineCourseZertis.Models
@{
    Layout = "~/Views/Shared/_LayoutLearn.cshtml";

    var setLang = GetUser.language(ViewBag.language);


    var ZertisEconom = Model.Where(e => e.PremiumId == 1).FirstOrDefault();
    var ZertisStandard = Model.Where(e => e.PremiumId == 2).FirstOrDefault();
    var ZertisFull = Model.Where(e => e.PremiumId == 3).FirstOrDefault();

    var Contacts = false;
    var tenbooks = false;
    var SupportDias = false;
    var businessplan = false;
    var ContactDisabled = "disabled md-trigger";
    var tenbookDisabled = "disabled md-trigger";
    var SupportDisabled = "disabled md-trigger";
    var businessplanDisabled = "disabled md-trigger";

    if (ZertisEconom != null || ZertisStandard != null || ZertisFull != null)
    { Contacts = true; }

    if (ZertisStandard != null || ZertisFull != null)
    { tenbooks = true; }

    if (ZertisFull != null)
    {
        SupportDias = true;
        businessplan = true;
    }

    if (Contacts)
    {
        ContactDisabled = "";
    }

    if (tenbooks)
    {
        tenbookDisabled = "";
    }

    if (SupportDias)
    {
        SupportDisabled = "";
    }
    if (businessplan)
    {
        businessplanDisabled = "";
    }

}



<div class="md-modal md-effect-1" id="modal-1">
    <div class="md-content">
        <div class="modal-header">
            <button class="md-close close">&times;</button>

        </div>
        <div class="modal-body">

            <div class="modal_iconbuyer">
