
@{
    ViewBag.Title = "creategroup";
    ViewBag.creategroup = "active";
    Layout = "~/Views/Shared/_Layout_portal.cshtml";
}

<script>
    function fileCheck(obj) {
        var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
        if ($.inArray($(obj).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
            alert("Only '.jpeg','.jpg', '.png', '.gif', '.bmp' formats are allowed.");
        }
    }
    function showImage() {
        document.getElementById('modelimage').style.display = 'none';
    }
    function PreviewImage(no) {
        var oFReader = new FileReader();

        var sizefile = document.getElementById("img" + no).files[0].size;
        if (sizefile < 5000000) {
            oFReader.readAsDataURL(document.getElementById("img" + no).files[0]);

            oFReader.onload = function (oFREvent) {
                document.getElementById("uploadPreview" + no).src = oFREvent.target.result;
            };
        }
        else {
            document.getElementById("img" + no).value = "";
            toastr["error"]("Ошибка: Изображения должен менее 4мб  ");
        }

    }
    function bass() {
        var img1 = $("#img1").val();
        var img2 = $("#img2").val();
        if (img1 == null || img1 == "") {
            $("#errorimg1").removeClass("hidden");
        }

        if (img2 == null || img2 == "") {
            $("#errorimg2").removeClass("hidden");
        }
    }

</script>


<section class="content-header">
    <h1>
        Создать Видео Урок
    </h1>
    <ol class="breadcrumb">
        <li><a href="/portal/groups"><i class="fa fa-dashboard"></i>ВИДЕО УРОКИ</a></li>
        <li><a href="/portal/creategroup">Создать Видео Урок</a></li>

    </ol>
</section>


<!-- Main content -->
<section class="content">
    <div class="row">

        <div class="col-xs-12">

            <!-- Box Comment -->
            <div class="box box-widget">


                <form method="post" enctype="multipart/form-data" style="max-width:700px;margin: 0 auto;">
                    <div class="box-body">


                        <div class="col-xs-12">


                            <label for="img1" class="thumbnail">

                                <img id="uploadPreview1" class="img-responsive pad" src="~/Images/iconimg.png" alt="Photo" style="cursor: pointer;width:300px">

                            </label>

                            <input id="img1" type="file" name="img1" onchange="PreviewImage(1);" style="display: none;" required="">

                            <div class="col-xs-12 estyle hidden" id="errorimg1">Пожалуйста добавьте фото</div>



                        </div>





                        <div class="col-xs-12 col-md-12">


                            <div class="form-group">
                                <label for="Name">Название на казахском </label>
                                <input type="text" class="form-control" name="NameKZ">
                            </div>
                            <div class="form-group">
                                <label for="Name">Название на русском</label>
                                <input type="text" class="form-control" name="NameRU" required>
                            </div>
                            <div class="form-group">
                                <label for="Name">Название на узбекском</label>
                                <input type="text" class="form-control" name="NameUZ">
                            </div>
                            <div class="form-group">
                                <label for="Name">Название на кыргызском</label>
                                <input type="text" class="form-control" name="NameKR">
                            </div>
                            <div class="form-group">
                                <label for="Name">Название на английском</label>
                                <input type="text" class="form-control" name="NameEN">
                            </div>
                            <div class="form-group">
                                <label for="Name">Название на турецком</label>
                                <input type="text" class="form-control" name="NameTR">
                            </div>



                         


                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addon1">Уровень</span>
                                    <select type="text" class="form-control" name="LevelId" aria-describedby="basic-addon1" required>

                                        <option value="0">1.Бесплатный</option>
                                        <option value="1">2.Премиум A</option>
                                     

                                    </select>
                                </div>

                            






                        </div>


                    </div>

                    <div class="box-footer">


                        <button type="submit" onclick="bass()" class="btn bg-olive margin"><span class="fa fa-plus"></span> Создать</button>


                    </div>

                </form>
                <!-- /.box-footer -->
            </div>

        </div>
    </div>
</section>


<input type="hidden" id="AddModuleMsg" value="@ViewBag.AddModuleMsg" />

<script>


    function Message() {

        var AddModuleMsg = $("#AddModuleMsg").val();
        if (AddModuleMsg == "success") {
            toastr["success"]("Модуль успешно добавлен !!!")
        }
        else if (AddModuleMsg == "error") {
            toastr["warning"]("При обработка произошла ошибка")
        }
    }

    setTimeout(Message, 1000);

</script>
